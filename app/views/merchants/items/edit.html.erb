<h2>Edit <%= @item.name %></h2>
<%= form_with model: @item, url: merchant_item_path(@merchant, @item), method: :patch, local: true do |form| %>
  <div class='form-group'>
    <%= form.label :name %>
    <%= form.text_field :name, class:'form-control'%>
  </div>

  <div class='form-group'>
    <%= form.label :unit_price %>
    <%= form.text_field :unit_price, value: "$#{@item.convert_unit_price_to_dollars}", class:'form-control' %>
  </div>

  <div class='form-group'>
    <%= form.label :description %>
    <%= form.text_area :description, class:'form-control' %>
  </div>

  <%= form.submit 'Update Item', class:'btn btn-primary' %>
<% end %>