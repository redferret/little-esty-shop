<%= render partial: 'partials/merchants/navbar', locals: {merchant: @merchant}%>
<div class='container'>
  <div class='row' id="ready-to-ship">
    <div class='col'>
      <h3>Items Ready to Ship</h3>
      <table class='table'>
        <thead>
          <tr>
            <th>Item Name</th>
            <th>Invoice</th>
            <th>Creation Date</th>
          </tr>
        </thead>
        <tbody>
        <% @invoices.each do |invoice| %>
          <% invoice.invoice_items.each do |invoice_item| %>
            <tr id='invoice-item-<%=invoice_item.id%>'>
              <td><%= invoice_item.item.name %></td>
              <td><%= link_to "Invoice ##{invoice.id}", merchant_invoice_path(@merchant, invoice) %></td>
              <td><%= invoice.invoice_creation_date %><br></td>
            </tr>
          <% end %>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class='col' id='favorite-customers'>
      <h3>Favorite Customers: Top 5</h3>
        <table class='table'>
          <thead>
            <tr id="customers">
              <% @customers.top_five_customers.each do |customer| %>
                <td <%= customer.id %> ><%= customer.first_name %> <%= customer.last_name %>, <%= customer.transactions.success_count %> purchase(s)</td>
              <% end %>
            </tr>
          </thead>
        </div>
      </div>
    </div>
